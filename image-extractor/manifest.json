{
  "manifest_version": 3,
  "name": "Image Downloader",
  "version": "1.0",
  "description": "Adds a download button to images on any webpage.",
  "permissions": [
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "icons": {
    "48": "icon.png"
  }
}
